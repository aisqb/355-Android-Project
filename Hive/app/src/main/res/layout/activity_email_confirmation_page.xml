<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7dae0"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".emailConfirmation"
    tools:ignore="ExtraText">>

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="110dp"
        android:layout_height="119dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bee" />

    <TextView
        android:id="@+id/largeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/changa_one"
        android:text="Thanks for signing up! \n\nHive sent you an email confirmation. \n\nPlease verify your email to start using Hive. \n\nBuzz Buzz!"
        android:textColor="@color/black"
        android:textSize="30sp" />

</LinearLayout>